{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist/client",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/(stream|knowledge|inspiration|analyze-image)", "function": "tldrawAgent" },
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
